<Page x:Class="Divvun.Installer.OneClick.CancelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Divvun.Installer.OneClick"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CancelPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="21" FontWeight="SemiBold" TextAlignment="Center" TextWrapping="Wrap"
                   VerticalAlignment="Center" Text="{x:Static local:Strings.InstallationCancelled}" />
    </Grid>
</Page>