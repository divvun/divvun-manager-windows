<Window x:Class="Pahkat.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pahkat.UI.Main"
        mc:Ignorable="d"
        Title="{Binding ElementName=FrmContainer, Path=Content.Title}"
        MinHeight="350" MinWidth="550"
        Height="350" Width="550">
    <Grid>
        <Frame x:Name="FrmContainer" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
