<Window x:Class="Divvun.Installer.UI.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:pahkat="clr-namespace:Divvun.Installer"
        mc:Ignorable="d"
        Title="{x:Static pahkat:Strings.AboutApp}" Height="220" Width="250" ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="LblAppName" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="TextBlock"
                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="0" />
        <TextBlock x:Name="LblVersion" HorizontalAlignment="Center" Margin="0,16,0,0" TextWrapping="Wrap"
                   Text="TextBlock" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0" />
        <Button x:Name="BtnWebsite" Content="Button" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"
                Grid.Row="2" Grid.Column="0" Padding="4,2,4,2" />
    </Grid>
</Window>